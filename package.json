{
  "name": "@flowglad/javascript",
  "private": true,
  "license": "MIT",
  "version": "0.0.0",
  "scripts": {
    "test": "pnpm -r test",
    "yalc:publish": "pnpm -r yalc:publish",
    "format": "prettier --write \"**/*.{ts,tsx}\"",
    "dev": "tsx scripts/dev.ts",
    "dev:react": "pnpm --filter @flowglad/react dev",
    "dev:next": "pnpm --filter @flowglad/nextjs dev",
    "dev:server": "pnpm --filter @flowglad/server dev",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean",
    "changeset:empty": "pnpm changeset --empty",
    "preinstall": "npx only-allow pnpm",
    "build": "pnpm -r build",
    "build:declarations": "pnpm -r build:declarations",
    "packages:changeset": "changeset",
    "packages:version": "changeset version",
    "packages:publish": "pnpm build:declarations && pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@types/node": "^18.0.0",
    "chalk": "^5.4.1",
    "chokidar": "^4.0.3",
    "debounce": "^2.2.0",
    "prettier": "3.5.1",
    "prettier-plugin-packagejson": "2.5.8",
    "prettier-plugin-tailwindcss": "0.6.11",
    "tsup": "8.3.6",
    "tsx": "4.17.0",
    "typescript": "^5.0.0",
    "zx": "^8.3.2"
  }
}
